<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cxy.springcloud.dao.UserDao">

    <select id="findById" parameterType="Integer" resultType="com.cxy.springcloud.entities.User">
		select * from USER where id=#{id};
	</select>
    <select id="findAll" resultType="com.cxy.springcloud.entities.User">
		select * from user;
	</select>
    <select id="findLimit" parameterType="int" resultType="com.cxy.springcloud.entities.User">
		select * from user limit #{fnum},#{bnum};
	</select>
    <insert id="addUser" parameterType="User">
		INSERT INTO user(headid,email,password,username,phonenumber,focususers,focustext,sex,underwrite,experence,signintime) VALUES(#{headId},#{email},#{password},#{username},#{phoneNumber},#{focusUsers},#{focusText},#{sex},#{underWrite},#{experence},current_timestamp());
	</insert>
    <delete id="deleteUser" parameterType="Integer">
		delete from user where id=#{id};
	</delete>

</mapper>