<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cxy.springcloud.dao.DiscussDao">
    <select id="findById" parameterType="Integer" resultType="com.cxy.springcloud.entities.Discuss">
		select * from discuss where id=#{id};
	</select>
    <select id="findAll" resultType="com.cxy.springcloud.entities.Discuss">
		select * from discuss;
	</select>
    <select id="findLimit" parameterType="int" resultType="com.cxy.springcloud.entities.Discuss">
		select * from discuss limit #{fnum},#{bnum};
	</select>
    <insert id="addAdminUser" parameterType="Discuss">
		INSERT INTO discuss(userid, textid, discusstext, buildtime, floor) VALUES(#{userId},#{textId},#{discussText},current_timestamp(),#{floor});
	</insert>
    <delete id="deleteAdminUser" parameterType="Integer">
		delete from discuss where id=#{id};
	</delete>
</mapper>