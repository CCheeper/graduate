<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cxy.springcloud.dao.TextDao">
    <select id="findById" parameterType="Integer" resultType="com.cxy.springcloud.entities.Txet">
		select * from text where id=#{id};
	</select>
    <select id="findAll" resultType="com.cxy.springcloud.entities.Txet">
		select * from text;
	</select>
    <select id="findLimit" parameterType="int" resultType="com.cxy.springcloud.entities.Txet">
		select * from text limit #{fnum},#{bnum};
	</select>
    <insert id="addTxet" parameterType="Txet">
		INSERT INTO text(likenum, releasetime, status, text, userid, type, scanned) VALUES(#{likeNum},current_timestamp(),#{status},#{text}#{userId},#{type},#{scanned});
	</insert>
    <delete id="deleteTxet" parameterType="Integer">
		delete from text where id=#{id};
	</delete>
</mapper>